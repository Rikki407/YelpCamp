<% include ../partials/header.ejs%>
<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
                <li class="list-group-item">Info4</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-fluid" alt="Responsive image" src="<%=campground.image%>">
                <div class="caption-full p-3">
                    <h5 class="float-right">$9.00/night</h5>
                    <h4><a href="/"><%=campground.name%></a></h4>
                    <p><%=campground.description%></p>

                </div>
            </div>
            <div class=" card-header mt-3">
                <div class="text-right">
                   <a class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Leave a Review</a>
                </div>
                <hr>
                <% campground.comments.forEach(function (comment) { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%=comment.author%></strong>
                            <span class="float-right">10 days ago</span>
                            <p><%=comment.text%></p>
                        </div>
                    </div>
                <%})%>
            </div>
        </div>

    </div>
</div>

<% include ../partials/footer.ejs%>