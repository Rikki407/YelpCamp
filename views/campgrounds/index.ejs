
<% include ../partials/header.ejs %>
<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our hand-picked campgrounds from all our the world</p>
        <a  href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <%campgrounds.forEach(function (campground) { %>
        <div class="col-lg-4 col-sm-6">
            <div class="img-thumbnail">
                <img style="height: 200px" class="img-fluid" alt="Responsive image" src="<%= campground.image%>">
                <div class="caption">
                    <h4><%=campground.name%></h4>
                </div>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">More Info</a>
            </div>
        </div>
        <%})%>
    </div>

</div>
<% include ../partials/footer.ejs%>